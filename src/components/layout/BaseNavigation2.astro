---
import { Astronav, MenuItems, MenuIcon, Dropdown, DropdownItems, DropdownSubmenu } from "astro-navbar";

const navigationItems = [
  // { name: 'Home', url: '/' },
  { name: 'Projects', url: '/projects/' },
  { name: 'Events', url: '/events/' },
  { name: 'About', url: '/about/' },
];
---

<div>
  <Astronav>
    <div class="flex">
      <MenuIcon class="w-6 h-6 text-gray-800" />
    </div>
    <MenuItems class="hidden lg:flex">
        <ul class='flex flex-col gap-3 poppins'>
            {
              navigationItems.map((item) => (
                <li>
                  <a
                    class='text-sm font-medium hover:text-green hover:underline transition-all duration-150 ease-in-out'
                    href={item.url}
                    title={`Go to ${item.name}`}
                  >
                    {item.name}
                  </a>
                </li>
              ))
            }
            </ul>
    </MenuItems>
  </Astronav>
</div>