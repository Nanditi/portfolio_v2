---
const socials = [
  {
    name: 'Instagram',
    url: 'https://instagram.com/nanditi.k',
    icon: 'i-uil-instagram',
  },
  {
    name: 'YouTube',
    url: 'https://www.youtube.com/@nanditi',
    icon: 'i-uil-youtube',
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/nanditi/',
    icon: 'i-uil-linkedin',
  },
];
---

<section class='md:hidden mb-8'>
  <h2 class='hidden'>Socials section</h2>
  <ul class='flex justify-stretch space-x-6'>
    {
      socials.map((item) => (
        <li class='bg-white px-4 py-2 text-black border-black border-2 rounded card-shadow'>
          <a href={item.url} target='_blank' title={`Go to ${item.name}`}>
            <div class:list={[item.icon, 'p-4']} />
          </a>
        </li>
      ))
    }
  </ul>
</section>
