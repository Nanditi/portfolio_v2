---
import Layout from '@layouts/Default.astro';
import RecentBlogPosts from '@components/generic/RecentBlogPosts.astro';
import MobileSocials from '@components/home/MobileSocials.astro';
import { Pill } from '@eliancodes/brutal-ui';
import { Button } from '@eliancodes/brutal-ui';
import { Card } from '@eliancodes/brutal-ui';

const builtWith = [
  { name: 'Astro', url: 'https://astro.build/' },
  { name: 'UnoCSS', url: 'https://uno.antfu.me/' },
  {
    name: 'Content Collections',
    url: 'https://docs.astro.build/en/guides/content-collections/',
  },
  { name: 'RSS', url: 'https://docs.astro.build/en/guides/rss/' },
  {
    name: 'Sitemap',
    url: 'https://docs.astro.build/en/guides/integrations-guide/sitemap/',
  },
  { name: 'Vercel', url: 'https://vercel.com' },
  { name: 'TypeScript', url: 'https://www.typescriptlang.org/' },
];
---

<Layout
  title='Home'
  pageTitle='Nanditi |Â Home'
  description='Nanditi Portfolio'
>
  <main class='bg-pink p-6'>
    <MobileSocials />
    <section id='about' class='grid md:grid-cols-8 gap-8 mt-4'>
    <div class='col-span-2'>
      <Card>
       <img src="src/assets/nksonicphoto.png" 
       class="object-cover h-full w-full rounded-lg md:col-span-2" alt="nanditi" width="392" height="392" 
       loading="lazy" decoding="async">
      </Card>
    </div>
      <h2 class='hidden'>nanditi khilnani</h2>
      <div class='col-span-4'>
        <Card color="cyan">
          <div class='flex flex-col justify-between items-start gap-4'>
            <p class='mt-4 outfit text-2xl md:text-5xl lg:text-7xl'>
              nanditi khilnani 
            </p>
            <p class='mt-2 outfit text-xl md:text-3xl lg:text-5xl'>
              co-founder @ <a href='https://www.ajaibghar.com/'>ajaibghar</a>
              <!-- how do i "open link in new tab" for ajaibghar here -->
              musician, live-coder, tech-artist
              art & community instigater
            </p>
            <!-- <Button target={'_self'} href='/blog/'>
              Check out the blog &rarr;
            </Button> -->
          </div>
        </Card>
      </div>
      <div class='col-span-2'>
        <Card>
          <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
            what is ajaibghar?
          </h2>
          <p class='poppins'>
            a creative technology studio & lab for art, culture & futures, trailblazing a transdisciplinary practice 
            in arts & culture utilising the strengths of emerging technology, experience design, cultural strategy & community building.
          </p>
        </Card>
      </div>
      <div class='col-span-4'>
        <Card>
          <p class='poppins'>
            Nanditi is a musician, creative-tech entrepreneur, interdisciplinary artist & experience maker. She is a classically trained Indian musician and live-coder, exploring the intersection of music and technology through generative Raga-based electronic music and soundscapes. 
            Apart from being a performer Nanditi is also a trainer and facilitator; she devises and conducts workshops on Generative Music & Live-coding for all ages and experience levels. In the past, she has served a long stint in technology at Google India, before venturing into arts management 
            for heritage arts & folk music of Rajasthan at Jaipur Virasat Foundation and JAJAM Jaipur where she led efforts on strategy, curation, events programming & community building, as well as worked on ethnomusicology research and grassroots initiatives for & with artist communities around the state.
          </p>
        </Card>
      </div>
    </div>
    <div class='col-span-4'>
      <Card>
        <h2 class='text-2xl md:text-4xl lg:text-6xl mb-4 dm-serif'>
          communities
        </h2>
        <ul class='flex gap-4 flex-wrap'>
          {
            builtWith.map((item) => (
              <li>
                <Pill>
                  <a
                    class='sanchez'
                    href={item.url}
                    target='_blank'
                    title={`Go to ${item.name}`}
                  >
                    {item.name}
                  </a>
                </Pill>
              </li>
            ))
          }
        </ul>
      </Card>
    </div>
  </div>
  <div class='col-span-4'>
    <Card>
      <ul class='flex gap-4 flex-wrap'>
        {
          builtWith.map((item) => (
            <li>
              <Pill>
                <a
                  class='sanchez'
                  href={item.url}
                  target='_blank'
                  title={`Go to ${item.name}`}
                >
                  {item.name}
                </a>
              </Pill>
            </li>
          ))
        }
      </ul>
    </Card>
  </div>
    </section>
    <RecentBlogPosts />
  </main>
</Layout>
